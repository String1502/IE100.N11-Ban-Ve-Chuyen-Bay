<div class='bg-tertiary-light'>

    <div style='height: 180px;' class='w-100 bg-primary-gradient'>
        <div class='container h-100'>
            <div class='d-flex flex-row h-100 justify-content-start align-items-center'>
                <div class='d-flex flex-column'>
                    <span class='custom-font h64-B text-light mb-2'>Bạn là?</span>
                    <span class='custom-font p20-S text-light'>Chọn nhóm người dùng.</span>

                </div>
            </div>
        </div>
    </div>

    <div class='container mt-4 pb-4 h-auto'>
        <div class='row align-items-center'>

            {{! Hành khách }}
            <div class='col-6 col-lg-3'>
                <div class='d-flex flex-row justify-content-center align-items-center'>

                    <div id='KhachHang' class='bg-light shadow rounded-2 ratio ratio-1x1 Zoom'>
                        <div class='d-flex flex-column justify-content-center'>

                            <div class='text-center mb-3'>
                                <i style='font-size:9vw; color: #025951;' class='fa-solid fa-user-plus'></i>
                            </div>

                            <div style='background: #025951;' class='text-center custom-font p20-B text-light lh-lg'>
                                Khách hàng
                            </div>

                        </div>
                    </div>

                </div>
            </div>

            {{! Nhân viên }}
            <div class='col-6 col-lg-3'>
                <div class='d-flex flex-row justify-content-center align-items-center'>

                    <div
                        id='NhanVien'
                        class='bg-light shadow rounded-2 ratio ratio-1x1 Zoom'
                        data-bs-toggle='modal'
                        data-bs-target='#Modal'
                    >
                        <div class='d-flex flex-column justify-content-center'>

                            <div class='text-center mb-3'>
                                <i style='font-size:9vw; color: #D65205;' class='fa-solid fa-user-gear'></i>
                            </div>

                            <div style='background: #D65205;' class='text-center custom-font p20-B text-light lh-lg'>
                                Nhân viên hệ thống
                            </div>

                        </div>
                    </div>

                </div>
            </div>

            <div class='d-none d-lg-block col-lg-6'>
                <div class='d-flex flex-row justify-content-center align-items-center'>
                    <img
                        src='https://img.freepik.com/free-vector/positive-people-sitting-city-park-with-cherry-trees-isolated-flat-illustration_74855-15504.jpg?w=1380&t=st=1668404980~exp=1668405580~hmac=f0570ffafe8e3b44e7870358611f5ff582305b6fae8fec9a31b5377a5632f51c'
                        alt=''
                        class='img-fluid rounded'
                    />
                </div>
            </div>
        </div>
    </div>

    {{! Modal }}
    <div class='modal fade' id='Modal' tabindex='-1' aria-hidden='true'>
        <div style='width: 340px;' class='modal-dialog modal-dialog-centered'>
            <div class='modal-content'>
                <div class='modal-header'>
                    <span class='modal-title custom-font h24-B text-dark'>Đăng nhập tài khoản</span>
                    <button type='button' class='btn-close' data-bs-dismiss='modal' aria-label='Close'></button>
                </div>

                <form name='staff-form' method='POST'>

                    <div class='modal-body'>
                        <div class='d-flex flex-column'>
                            {{! Tài khoản }}
                            <div class='mb-4'>
                                <label class='form-label custom-font p14-S'>Tài khoản</label>
                                <input
                                    class='form-control custom-font p16-S text-dark border-tertiary custom-boxshadow-focus-primary'
                                    type='text'
                                    autocomplete='email'
                                />
                            </div>

                            {{! Mật khẩu }}
                            <div class='d-flex flex-column'>
                                <div class='d-flex flex-row justify-content-between align-items-end mb-2'>

                                    <div>
                                        <label class='custom-font p14-S'>Mật khẩu</label>
                                    </div>

                                    <div>
                                        <a
                                            id='QuenMatKhau'
                                            type='button'
                                            href='/'
                                            class='text-primary custom-font p14-S text-decoration-none'
                                        >
                                            Quên mật khẩu
                                        </a>
                                    </div>

                                </div>

                                <input
                                    class='form-control custom-font p16-S text-dark border-tertiary custom-boxshadow-focus-primary'
                                    type='password'
                                    autocomplete='new-password'
                                />
                            </div>

                        </div>

                    </div>

                    <div class='modal-footer pb-0'>
                        <div class='d-flex flex-row align-items-center h-auto w-100'>

                            <button
                                id='DangNhap'
                                type='button'
                                autocomplete='submit'
                                class='btn btn-primary bg-secondary border-secondary px-2 text-light custom-font p20-S custom-boxshadow-focus-none custom-boxshadow-hover-secondary'
                            >
                                Đăng nhập
                            </button>

                            <div class='d-flex flex-column align-items-start ms-3'>
                                <div class='mb-2'>
                                    <span class='custom-font p12-S text-dark'>Bạn chưa có tài khoản?</span>

                                </div>

                                <div>
                                    <a
                                        id='DangKy'
                                        type='button'
                                        href='/'
                                        class='text-primary custom-font p12-S text-decoration-none'
                                    >
                                        Đăng ký
                                    </a>
                                </div>

                            </div>

                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

{{! Our js }}
<script type='module' src='/javascript/login/DangNhap.js'>
</script>