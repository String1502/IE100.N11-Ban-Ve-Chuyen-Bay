<div class='bg-tertiary-light'>

    <div style='height: 88px;' class='w-100 bg-primary'>
        <div class='container h-100'>
            <div class='row h-100 justify-content-end align-items-center'>
                <div class='col-md-4 w-auto'>
                    <a
                        id='ChinhSuaChiTiet'
                        type='button'
                        class='btn btn-primary bg-secondary border-secondary px-4 text-light custom-font p20-S custom-boxshadow-focus-none custom-boxshadow-hover-secondary'
                    >
                        Chỉnh sửa chi tiết
                    </a>
                </div>

            </div>
        </div>
    </div>

    <div class='container mt-4 pb-4 h-auto'>

        {{! Thông tin chuyến bay }}
        <div class='mb-5 mx-2 mx-md-5'>

            <div class='d-flex flex-column bg-light shadow rounded-2 h-auto'>

                {{! Tiêu đề }}
                <div class='px-3 custom-font h24-B text-tertiary py-3'>
                    THÔNG TIN CHUYẾN BAY
                </div>

                {{! Dòng 1 }}
                <div class='row px-3 justify-content-center'>
                    {{! Mã chuyến bay }}
                    <div class='col-12'>
                        <div class='mb-3'>
                            <label for='MaChuyenBay' class='form-label custom-font p14-S'>Mã chuyến bay</label>
                            <input
                                style='height: 36px;'
                                type='text'
                                class='form-control custom-font p16-S border-tertiary py-1 custom-boxshadow-focus-primary'
                                id='MaChuyenBay'
                                readonly
                            />
                        </div>
                    </div>

                </div>

                {{! Dòng 2 }}
                <div class='row px-3 justify-content-center'>

                    {{! Sân bay đi }}
                    <div class='col-4 col-md-4'>
                        <div class='mb-3'>
                            <label for='SanBayDi' class='form-label custom-font p14-S'>Sân bay đi</label>
                            <input
                                style='height: 36px;'
                                type='text'
                                class='form-control custom-font p16-S border-tertiary py-1 custom-boxshadow-focus-primary'
                                id='SanBayDi'
                                readonly
                            />
                        </div>
                    </div>

                    {{! Sân bay đến }}
                    <div class='col-4 col-md-4'>
                        <div class='mb-3'>
                            <label for='SanBayDen' class='form-label custom-font p14-S'>Sân bay đến</label>
                            <input
                                style='height: 36px;'
                                type='text'
                                class='form-control custom-font p16-S border-tertiary py-1 custom-boxshadow-focus-primary'
                                id='SanBayDen'
                                readonly
                            />
                        </div>
                    </div>

                    {{! Khởi hành }}
                    <div class='col-4 col-md-4'>
                        <div class='mb-3'>
                            <label for='KhoiHanh' class='form-label custom-font p14-S'>Khởi hành</label>
                            <input
                                style='height: 36px;'
                                type='text'
                                class='form-control custom-font p16-S border-tertiary py-1 custom-boxshadow-focus-primary'
                                id='KhoiHanh'
                                readonly
                            />
                        </div>
                    </div>

                </div>

                {{! Dòng 3 }}
                <div class='row px-3 mb-3 justify-content-center'>

                    {{! Thời gian bay }}
                    <div class='col-6 col-md-2'>
                        <div class='mb-3'>
                            <label for='ThoiGianBay' class='form-label custom-font p14-S'>Thời gian bay</label>
                            <input
                                style='height: 36px;'
                                type='text'
                                class='form-control custom-font p16-S border-tertiary py-1 custom-boxshadow-focus-primary'
                                id='ThoiGianBay'
                                readonly
                            />
                        </div>
                    </div>

                    {{! Số ghế trống }}
                    <div class='col-6 col-md-2'>
                        <div class='mb-3'>
                            <label for='SoGheTrong' class='form-label custom-font p14-S'>Ghế trống</label>
                            <input
                                style='height: 36px;'
                                type='text'
                                class='form-control custom-font p16-S border-tertiary py-1 custom-boxshadow-focus-primary'
                                id='SoGheTrong'
                                readonly
                            />
                        </div>
                    </div>

                    {{! Trạng thái }}
                    <div class='col-6 col-md-4'>
                        <div class='mb-3'>
                            <label for='TrangThai' class='form-label custom-font p14-S'>Trạng thái</label>
                            <input
                                style='height: 36px;'
                                type='text'
                                class='form-control custom-font p16-S border-tertiary py-1 custom-boxshadow-focus-primary'
                                id='TrangThai'
                                readonly
                            />
                        </div>
                    </div>

                    {{! Giá vé }}
                    <div class='col-6 col-md-4'>
                        <div class='mb-3'>
                            <label for='GiaVeCoBan' class='form-label custom-font p14-S'>Giá vé cơ bản</label>
                            <div class='input-group mb-3'>
                                <input
                                    style='height: 36px;'
                                    type='text'
                                    class='form-control custom-font p16-S border-tertiary py-1 custom-boxshadow-focus-primary'
                                    id='GiaVeCoBan'
                                    readonly
                                />
                                <span
                                    style='height: 36px;'
                                    class='bg-light border-tertiary input-group-text custom-font p16-S py-1 text-tertiary'
                                >VND</span>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>

        {{! SBTG + Hạng vé }}
        <div class='row px-0 py-0'>

            {{! Sân bay trung gian }}
            <div class='col-12 col-md-7 mb-5'>
                <div class='d-flex flex-column bg-light shadow rounded-2 h-auto'>

                    {{! Tiêu đề }}
                    <div class='px-3 custom-font h24-B text-tertiary py-3'>
                        SÂN BAY TRUNG GIAN
                    </div>

                    {{! Table }}
                    <div class='px-3'>

                        <table class='table'>
                            <thead>
                                <tr class='custom-font p16-S text-center'>
                                    <th scope='col'>Thứ tự</th>
                                    <th scope='col'>Tên sân bay</th>
                                    <th scope='col'>Thời gian đến</th>
                                    <th scope='col'>Thời gian dừng (Phút)</th>
                                    <th scope='col'>Ghi chú</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class='custom-font p16-R align-middle text-center'>
                                    <th>1</th>
                                    <td>Tân Sơn Nhất</td>
                                    <td>11:11 11/11/2022</td>
                                    <td>180</td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>

            {{! Hạng vé }}
            <div class='col-12 col-md-5 mb-5'>
                <div class='d-flex flex-column bg-light shadow rounded-2 h-auto'>

                    {{! Tiêu đề }}
                    <div class='px-3 custom-font h24-B text-tertiary py-3'>
                        HẠNG VÉ
                    </div>

                    {{! Table }}
                    <div class='px-3'>

                        <table class='table'>
                            <thead>
                                <tr class='custom-font p16-S text-center'>
                                    <th scope='col'>Tên hạng vé</th>
                                    <th scope='col'>Giá tiền</th>
                                    <th scope='col'>Ghế trống</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class='custom-font p16-R align-middle text-center'>
                                    <th>Phổ thông</th>
                                    <td>500.000</td>
                                    <td>11</td>
                                </tr>
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>

        </div>

        {{! Vé đã đặt }}
        <div class='mb-5'>

            <div class='d-flex flex-column bg-light shadow rounded-2 h-auto'>

                {{! Tiêu đề }}
                <div class='px-3 d-flex flex-row justify-content-between align-items-center'>
                    <div class='custom-font h24-B text-tertiary py-3'>
                        VÉ ĐÃ ĐẶT
                    </div>

                    {{! Search Vé}}
                    <div>
                        <div class='input-group'>
                            <input
                                type='text'
                                class='form-control custom-font p16-S border-tertiary custom-boxshadow-focus-primary'
                                id='SearchVe'
                                placeholder='Mã vé'
                            />
                            <span class='bg-light border-tertiary input-group-text custom-font p16-S text-tertiary'><i
                                    class='fa-solid fa-magnifying-glass'
                                ></i></span>
                        </div>
                    </div>
                </div>

                {{! Table }}
                <div class='px-3'>

                    <table class='table'>
                        <thead>
                            <tr class='custom-font p16-S text-center'>
                                <th scope='col'>Mã vé</th>
                                <th scope='col'>Hành khách</th>
                                <th scope='col'>Hạng vé</th>
                                <th scope='col'>Hành lý</th>
                                <th scope='col'>Ngày thanh toán</th>
                                <th scope='col'>Giá vé</th>
                                <th scope='col'>Liên lạc</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class='custom-font p16-R align-middle text-center'>
                                <th>1</th>
                                <td>Phan Trường Huy</td>
                                <td>Thương gia</td>
                                <td>+ 15kg</td>
                                <td>11:11 11/11/2022</td>
                                <td>500.000</td>
                                <td style='width: 12.5%;'>
                                    <a
                                        type='button'
                                        class='btn btn-primary bg-primary border-primary text-light custom-boxshadow-focus-none custom-boxshadow-hover-primary p14-S shadow-sm'
                                    >Liên lạc</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>

            </div>
        </div>

    </div>

</div>