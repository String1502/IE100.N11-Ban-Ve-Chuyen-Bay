<div class='bg-tertiary-light'>

    <div style='height: 88px;' class='w-100 bg-primary'>
        <div style='height: 88px;' class='container col-10'>
            <div style='height: 88px;' class='row d-flex flex-row align-items-center'>
                <div class='custom-font h28-B text-light mb-2'>Thay đổi các quy định</div>
            </div>
        </div>
    </div>
    <div class='container col-10'>
        {{! Quy định về chuyến bay }}
        <div class='row'>
            <div class='custom-font h24-B mt-4 mb-4'>Quy định về chuyến bay</div>
        </div>
        <div class='card' id='ThamSo_Card'>
            <div class='card-header p16-B custom-font align-items-center'>
                Các quy định áp dụng cho tất cả chuyến bay
            </div>
            <div class='card-body'>
                <div action='' id='FormThamSo'>

                    {{#each ThamSos}}
                        <div class='ThamSo row mb-3'>
                            <label class='TenthamSo p14-S form-label'>{{this.TenThamSo}}</label>
                            <div tabindex='1' class='d-flex flex-row RowThamSo'>
                                <input
                                    type='text'
                                    onkeypress='onlyNumber(event)'
                                    disabled
                                    class='disabled ThamSo_GiaTri form-control me-2 custom-font p16-R text-dark border-tertiary custom-boxshadow-focus-primary'
                                    value='{{this.GiaTri}}'
                                />
                            </div>
                        </div>
                    {{/each}}
                    <div class='row mx-0 justify-content-center'>
                        <div class='col-3'>
                            <button
                                style='width: 100%;'
                                class='d-none mb-3 ThamSo_CapNhat btn btn-primary bg-primary border-primary text-light custom-boxshadow-focus-none custom-boxshadow-hover-primary shadow-sm p20-B'
                            >Cập nhật</button>
                        </div>
                    </div>

                    <div class='row mx-0 justify-content-center'>
                        <div class='col-3'>
                            <button
                                style='width: 100%;'
                                class='mb-3 ThamSo_Sua btn btn-primary bg-secondary border-secondary text-light custom-boxshadow-focus-none custom-boxshadow-hover-secondary shadow-sm p20-B'
                            >Sửa</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div
            class='modal fade'
            id='staticBackdrop'
            data-bs-backdrop='static'
            data-bs-keyboard='false'
            tabindex='-1'
            aria-labelledby='staticBackdropLabel'
            aria-hidden='true'
        >
            <div class='modal-dialog modal-dialog-centered'>
                <div class='modal-content'>
                    <div class='modal-header'>
                        <h5 class='modal-title' id='staticBackdropLabel'>Cẩn thận</h5>
                    </div>
                    <div class='modal-body'>
                        Bạn có muốn lưu lại thông tin?
                    </div>
                    <div class='modal-footer'>
                        <button type='button' class='btn btn-secondary' data-bs-dismiss='modal'>Hủy</button>
                        <button type='button' class='btn btn-primary'>Lưu</button>
                    </div>
                </div>
            </div>
        </div>

        {{! Thông tin các sân bay }}
        <div class='row'>
            <div class='custom-font h24-B mt-4 mb-4'>Thông tin các sân bay</div>
        </div>
        <div class='card'>
            <div class='card-header d-flex justify-content-between align-items-center'>
                <div class='p16-B custom-font col-8'>Các sân bay sử dụng cho các chuyến bay</div>
                {{! nut tim kiem san bay }}
                <div class='input-group'>
                    <input
                        type='text'
                        style='border-right: 0px !important;'
                        oninput='let p = this.selectionStart; this.value = this.value.toUpperCase();this.setSelectionRange(p, p);'
                        class='SanBay_Input--Search form-control custom-font p16-R text-dark border-tertiary custom-boxshadow-focus-none border border-1 border-dark'
                        placeholder='Mã sân bay'
                    />
                    <div class='input-group-text bg-light border border-1 border-dark'><i
                            class='fa-sharp fa-solid fa-magnifying-glass'
                        ></i></div>
                </div>
            </div>

            <div class='card-body SanBay_Card' style='height: 300px; overflow-y: scroll;'>
                {{#each SanBays}}
                    <div class='row mb-3 SanBay'>
                        <div class='col-2'>
                            <label for='' class='p14-S form-label'>Mã sân bay</label>
                            <input
                                value='{{this.MaSanBay}}'
                                type='text'
                                disabled
                                class='SanBay_Ma form-control custom-font p16-R text-dark border-tertiary custom-boxshadow-focus-primary'
                            />
                        </div>
                        <div class='col-3'>
                            <label for='' class='p14-S form-label'>Tên sân bay</label>
                            <input
                                type='text'
                                value='{{this.TenSanBay}}'
                                disabled
                                class='SanBay_Ten form-control custom-font p16-R text-dark border-tertiary custom-boxshadow-focus-primary'
                            />
                        </div>
                        <div class='col-3'>
                            <label for='' class='p14-S form-label'>Địa chỉ</label>
                            <select
                                disabled
                                name=''
                                id=''
                                class='SanBay_DiaChi form-select custom-font p16-R text-dark border-tertiary custom-boxshadow-focus-primary'
                            >
                                {{#each this.TinhThanhs}}
                                    <option value='{{this.MaTinhThanh}}'>{{this.TenTinhThanh}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class='col-4'>
                            <label for='' class='p14-S form-label'>Trạng thái<i></i></label>
                            <div class='d-flex'>
                                <select
                                    disabled
                                    name=''
                                    id=''
                                    class='SanBay_TrangThai form-select custom-font p16-R text-dark border-tertiary custom-boxshadow-focus-primary me-2'
                                >
                                    <option value='1'>Hoạt động</option>
                                    <option value='2'>Ngưng hoạt động</option>
                                </select>
                            </div>
                        </div>
                    </div>
                {{/each}}

                {{! Dòng sân bay khi được thêm }}
                <div class='row mb-3 SanBay_Cop d-none' Index=''>
                    <div class='col-2'>
                        <label for='' class='p14-S form-label'>Mã sân bay</label>
                        <input
                            type='text'
                            oninput='let p = this.selectionStart; this.value = this.value.toUpperCase();this.setSelectionRange(p, p);'
                            class='SanBay_Ma form-control custom-font p16-R text-dark border-tertiary custom-boxshadow-focus-primary'
                        />
                    </div>
                    <div class='col-3'>
                        <label for='' class='p14-S form-label'>Tên sân bay</label>
                        <input
                            type='text'
                            class='SanBay_Ten form-control custom-font p16-R text-dark border-tertiary custom-boxshadow-focus-primary'
                        />
                    </div>
                    <div class='col-3'>
                        <label for='' class='p14-S form-label'>Địa chỉ</label>
                        <select
                            name=''
                            id=''
                            class='SanBay_DiaChi form-select custom-font p16-R text-dark border-tertiary custom-boxshadow-focus-primary'
                        >
                            <option value='' disabled selected hidden>Chọn tỉnh thành...</option>
                            {{#each TinhThanhs}}
                                <option value='{{this.MaTinhThanh}}'>{{this.TenTinhThanh}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class='col-4'>
                        <label for='' class='p14-S form-label'>Trạng thái<i></i></label>
                        <div class='d-flex'>
                            <select
                                name=''
                                id=''
                                class='SanBay_TrangThai form-select custom-font p16-R text-dark border-tertiary custom-boxshadow-focus-primary me-2'
                            >
                                <option value='1' selected>Hoạt động</option>
                                <option value='2'>Ngưng hoạt động</option>
                            </select>
                            <button
                                class='SanBay_Cop--Xoa btn btn-primary bg-secondary border-secondary text-light custom-boxshadow-focus-none custom-boxshadow-hover-secondary p14-S shadow-sm me-2'
                            >Xóa</button>
                        </div>
                    </div>
                </div>
            </div>
            {{! Nút thêm sân bay }}
            <div class='row mx-0 mb-3 mt-1 justify-content-start'>
                <div class='w-auto'>
                    <button
                        type='button'
                        class='SanBay--Them d-none btn btn-primary bg-primary border-primary px-4 text-light custom-font p14-S custom-boxshadow-focus-none custom-boxshadow-hover-primary'
                    >
                        <i class='fa-sharp fa-solid fa-circle-plus pe-2'></i>
                        Thêm sân bay
                    </button>
                </div>
            </div>
            <div class='row mx-0 justify-content-center'>
                <div class='col-3'>
                    <button
                        style='width: 100%;'
                        class='d-none mb-3 SanBay--CapNhat btn btn-primary bg-primary border-primary text-light custom-boxshadow-focus-none custom-boxshadow-hover-primary shadow-sm p20-B'
                    >Cập nhật</button>
                </div>
            </div>

            <div class='row mx-0 justify-content-center'>
                <div class='col-3'>
                    <button
                        style='width: 100%;'
                        class='mb-3 SanBay--Sua btn btn-primary bg-secondary border-secondary text-light custom-boxshadow-focus-none custom-boxshadow-hover-secondary shadow-sm p20-B'
                    >Sửa</button>
                </div>
            </div>
        </div>

        {{! Thông tin các hạng vé }}
        <div class='row'>
            <div class='custom-font h24-B mt-4 mb-4'>Thông tin các hạng vé</div>
        </div>
        <div class='card'>
            <div class='card-header d-flex justify-content-between align-items-center'>
                <div class='p16-B custom-font col-8'>Các hạng vé sử dụng cho các chuyến bay</div>
                <input
                    type='text'
                    class='form-control custom-font p16-R text-dark border-tertiary custom-boxshadow-focus-primary'
