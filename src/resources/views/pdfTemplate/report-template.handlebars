    <style>
        .form-control[readonly] {
            background-color: white;
            opacity: 1;
        }

        /* ::after display none */
        .d-none-after::after {
            display: none !important;
        }

        /* Input date */
        input[type='date'] {
            display: flex;
            flex-flow: row-reverse;
            column-gap: 0.75rem;
        }

        /* Input time */
        input[type='time'] {
            display: flex;
            flex-flow: row-reverse;
            column-gap: 0.75rem;
        }

        /* Button disabled */
        button:disabled,
        button[disabled] {
            background-color: #cccccc !important;
            color: #666666 !important;
            opacity: 0.3;
        }

