    <div class="bg-light">
        <div class="container-fluid mt-4 pb-4">
            <!-- Logo  + brand -->
            <a class="navbar-brand ms-5" href="/">
                <i class="fa-sharp fa-solid fa-plane d-inline-block align-text-top text-primary" width="30"
                    height="24"></i>
                <span class="custom-font h32-B text-dark">Planet</span>
            </a>

            <!-- Titel of the Report -->
            <div class="row my-3 mt-5">
                <div class="col text-center">
                    <h1 class="custom-font h28-B">Báo cáo doanh thu</h1>
                    <div class="custom-font h24-B my-3">Năm <span>2022</span></div>
                </div>
            </div>

            <div class="d-flex justify-content-end mb-3">
                <div class=" custom-font p16-R me-5">Ngày xuất: {{NgayXuat}}</div>
            </div>

            <!-- Table -->
            <table class="table">
                <thead class="sticky-top bg-light shadow-sm">
                    <tr class="custom-font p16-S text-center">
                        <th style="width: 25%" scope="col">Tháng</th>
                        <th style="width: 35%" scope="col">Số chuyến bay</th>
                        <th style="width: 25%" scope="col">Doanh thu</th>
                        {{!-- <th style="width: 15%" scope="col">Tỉ lệ</th> --}}
                    </tr>
                </thead>
                <tbody class="" thang="0">
                    {{#each DoanhThu}}
                    <tr class="custom-font p16-R align-middle text-center">
                        <th class="">{{Thang}}</th>
                        <td class="">{{SoChuyenBayFormated}}</td>
                        <td class="">{{TongDoanhThuFormated}}</td>
                        {{!-- <td class="">{{this.TiLe}}</td> --}}
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
