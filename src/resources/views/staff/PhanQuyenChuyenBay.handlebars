<div class='bg-tertiary-light'>
    <div style='height: 88px;' class='w-100 bg-primary'>
        <div style='height: 88px;' class='container col-10'>
            <div style='height: 88px;' class='row d-flex flex-row align-items-center'>
                <div class='custom-font h28-B text-light mb-2'>Phân quyền</div>

            </div>
        </div>
    </div>
    <div class='container col-10'>
        <div class='row mt-5 mb-3 justify-content-between'>
            <div class='col-auto h24-B'>
                Nhóm người dùng
            </div>
            <div class='col-auto'>
                <button
                    type='button'
                    class='ChucVu--Them btn bg-secondary border-secondary text-light custom-boxshadow-focus-none custom-boxshadow-hover-secondary shadow-sm p20-B'
                >Thêm nhóm người dùng </button>
            </div>
        </div>

        {{! List nhóm người dùng }}
        {{#each ChucVus}}
            <div class='card ChucVu'>
                <div class='card-header'>
                    <div class='row'>
                        <div class='col-6 d-flex justify-content-start align-items-center'>
                            <div class='col-auto me-3'><i class='fa-solid fa-circle-user fa-3x'></i></div>
                            <div class='col-auto d-flex flex-column'>
                                <div class='h24-B mb-2'>{{this.TenChucVu}}</div>
                                <div class='p16-S'>Số tài khoản: {{this.SoLuong}}</div>
                            </div>
                        </div>
                        <div class='col-6 d-flex justify-content-end align-items-center'>
                            <button
                                type='button'
                                style='height: 38px;'
                                index='{{this.TenChucVu}}'
                                class='ChucVu--Sua mx-3 btn bg-secondary border-secondary text-light custom-boxshadow-focus-none custom-boxshadow-hover-secondary shadow-sm p20-B'
                            >Chỉnh sửa </button>
                            <button
                                type='button'
                                style='height: 38px;'
                                index='{{this.TenChucVu}}'
                                class='User--Them btn bg-primary border-primary text-light custom-boxshadow-focus-none custom-boxshadow-hover-primary shadow-sm p20-B'
                            >Thêm </button>
                        </div>
                    </div>
                </div>
                <div class='card-body'>
                    <div class='card-title row align-items-center'>
                        <div class='col-md-6'>
                            <div class='h24-B'>Danh sách người dùng</div>
                        </div>
                        {{! Tìm kiếm tài khoản }}
                        <div class='col-md-6'>
                            <div class='input-group'>
                                <input
                                    type='text'
                                    style='border-right: 0px !important;'
                                    class='form-control custom-font p16-R text-dark border-tertiary custom-boxshadow-focus-none border border-1 border-dark'
                                    placeholder='Tìm kiếm'
                                />
                                <div class='input-group-text bg-light border border-1 border-dark'><i
                                        class='fa-sharp fa-solid fa-magnifying-glass'
                                    ></i></div>
                            </div>

                        </div>
                    </div>
                    {{! List tài khoản }}
                    <table class='table'>
                        <thead class='text-center'>
                            <tr>
                                <th class='col-2'>Tên tài khoản</th>
                                <th class='col-2'>Họ tên</th>
                                <th class='col-2'>Ngày sinh</th>
                                <th class='col-2'>CCCD</th>
                                <th class='col-2'>Giới tính</th>
                                <th class='col-2'></th>
                            </tr>
                        </thead>
                        <tbody class='text-center'>
                            {{#each this.Users}}
                                <tr class=''>
                                    <th class='lh-lg fw-normal'>{{this.MaUser}} </th>
                                    <th class='lh-lg fw-normal'>{{this.HoTen}} </th>
                                    <th class='lh-lg fw-normal'>{{this.NgaySinh}}</th>
                                    <th class='lh-lg fw-normal'>{{this.CCCD}}</th>
                                    <th class='lh-lg fw-normal'>{{this.GioiTinh}}</th>
                                    <th class=''>
                                        <button
                                            style='border-radius: 15px;'
                                            index="{{this.MaUser}}'"
                                            class='User--Sua p16-S btn bg-secondary border-secondary text-light custom-boxshadow-focus-none custom-boxshadow-hover-secondary shadow-sm p20-B'
                                        >Chi tiết</button>
                                    </th>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class='row' style='height: 50px;'></div>
        {{/each}}
    </div>
</div>
<form method='POST' name='Form' class='d-none'>
    <input id='Package' name='Package' />
</form>
<script type='module' src='/javascript/staff/PhanQuyenChuyenBay.js'></script>