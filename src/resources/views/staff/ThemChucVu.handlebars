<div class='bg-tertiary-light'>
    <div style='height: 88px;' class='w-100 bg-primary'>
        <div style='height: 88px;' class='container col-10'>
            <div style='height: 88px;' class='row d-flex flex-row align-items-center'>
                <div class='custom-font h28-B text-light mb-2'>Thêm nhóm người dùng</div>

            </div>
        </div>
    </div>
    <form method='post' name='Form'></form>

    <div class='container col-8'>

        <div class='row'>
            <div class='col-3'>
                <div class='card'>
                    <div class='card-header p16-B custom-font'>
                        Thông tin
                    </div>
                    <div class='card-body'>
                        <label for='' class='p14-S form-label custom-font'>Tên nhóm người dùng</label>
                        <input
                            type='text'
                            class='form-control custom-font p16-S text-dark border-tertiary custom-boxshadow-focus-primary ChucVu_Ten'
                        />
                    </div>
                </div>
            </div>
            <div class='col-9'>
                <div class='card mb-3'>
                    <div class='card-header p16-B custom-font'>
                        Quản lí quyền
                    </div>
                    <div class='card-body'>
                        {{#each Quyens}}
                            <div class='form-check d-flex justify-content-between align-items-center'>
                                <label class='p16-B form-check-label Quyen_Ten custom-font'>{{this.TenQuyen}}</label>
                                <input
                                    type='checkbox'
                                    class='form-checl-input Quyen custom-font'
                                    index='{{this.MaQuyen}}'
                                    style='height: 19px; width:19px;'
                                    checked
                                />
                            </div>
                        {{/each}}
                    </div>
                </div>
                <div class='col-auto' align='right'>
                    <button
                        type='button'
                        class='custom-font mb-4 ChucVu--Them btn bg-primary border-primary text-light custom-boxshadow-focus-none custom-boxshadow-hover-primary shadow-sm p20-B'
                    >Thêm nhóm người dùng </button>
                </div>
                <div style='height: 20px;'></div>
            </div>
        </div>
    </div>

</div>
<div class='d-none ChucVus' value='{{ChucVus}}'></div>
<script type='module' src='/javascript/staff/ThemChucVu.js'></script>